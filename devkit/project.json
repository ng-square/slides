{
  "name": "ng-square-devkit",
  "$schema": "../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "devkit/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/devkit",
        "main": "devkit/src/index.ts",
        "tsConfig": "devkit/tsconfig.lib.json",
        "assets": [
          "devkit/*.md",
          {
            "input": "./devkit/src",
            "glob": "**/!(*.ts)",
            "output": "./src"
          },
          {
            "input": "./devkit/src",
            "glob": "**/*.d.ts",
            "output": "./src"
          },
          {
            "input": "./devkit",
            "glob": "generators.json",
            "output": "."
          },
          {
            "input": "./devkit",
            "glob": "executors.json",
            "output": "."
          }
        ]
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "devkit/jest.config.ts"
      }
    }
  },
  "tags": []
}
